<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.HomeAdmin">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/black"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:fontFamily="serif"
            android:gravity="center"
            android:padding="20dp"
            android:text="ADMINISTRADOR"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_marginTop="20dp"
                android:onClick="irAjustarTarifas"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="match_parent"
                    android:layout_height="227dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_22" />

                <TextView
                    android:id="@+id/text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#008B8B"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:text="Ajusta tarifas"
                    android:textColor="@color/white"
                    android:textSize="25sp" />
            </LinearLayout>

            <!-- Paga tu servicio -->
            <LinearLayout
                android:id="@+id/idRegistrarIncidencias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:onClick="irRegistrarIncidencias"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="match_parent"
                    android:layout_height="227dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_18" />

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#008B8B"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:text="Registra incidencias"
                    android:textColor="@color/white"
                    android:textSize="25sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/idHistorialIncidencias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:onClick="irHistorialIncidencias"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="match_parent"
                    android:layout_height="215dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_21" />

                <TextView
                    android:id="@+id/text3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#008B8B"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:text="Historial de incidencias"
                    android:textColor="@color/white"
                    android:textSize="25sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/idGenerarReportes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:onClick="irGenerarReportes"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="match_parent"
                    android:layout_height="215dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_19" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#008B8B"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:text="Genera reportes"
                    android:textColor="@color/white"
                    android:textSize="25sp" />
            </LinearLayout>

            <Button
                android:id="@+id/btnSalirAdmin"
                android:layout_width="383dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:backgroundTint="@color/black"
                android:text="Salir"
                android:textSize="15dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>